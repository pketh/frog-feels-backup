  line-height: 0
  .emoji
    font-size: 18px
    vertical-align: middle

.art-critic
  img
    vertical-align: middle
  .bubbles
    margin-right: 5px
  p
    vertical-align: middle
    display: inline-block
    color: secondary
    // &.success
    //   color: white
    
section.save-drawing,
section.drawing-saved
  margin-bottom: 0rem

  .saved-notice
    background-color: white
    color: black
    display: inline-block
    padding: 6px 10px
    border-radius: 5px

  .saved-message
    max-width: 500px
    line-height: 2.4rem

  .saving-button
    cursor: default
    width: 75px
    &:active,
    &:hover
      background-color: transparent

  .saving:after
    overflow: hidden
    display: inline-block
    vertical-align: bottom
    animation: ellipsis steps(4,end) 900ms infinite
    content: "\2026"; /* ascii code for the ellipsis character */
    width: 0px
  
  @keyframes ellipsis
    to
      width: 1.25em

