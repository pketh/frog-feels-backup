palette-color-medium = 34px
palette-color-medium-hover = 34px
palette-color-medium-margin = 2px
palette-color-small = 30px

section.palette
  user-select: none
  margin-bottom: 4rem
  @media(max-width: 400px)
    margin-bottom: 0
  .colors
    margin: 0
  .color-well
    padding-right: 1rem
    display: inline-block
  .color
    position: relative
    display: inline-block
    list-style-type: none
    width: palette-color-medium
    height: palette-color-medium
    border-radius: 100px
    border: 4px solid black
    transition: all 0.1s
    cursor: pointer
    @media(max-width: 400px)
      width: palette-color-small
      height: palette-color-small
      transition: none
    &:hover
      opacity: 0.8
      // width: palette-color-medium-hover
      // height: palette-color-medium-hover
      // margin: palette-color-medium-margin
  .active
    border-color: white
    &:hover
      // opacity: 1
      width: palette-color-medium
      height: palette-color-medium
      margin: 0
  .black
    position: relative
    background-color: black
  .black:before
    content: " ";
    position: absolute;
    border-radius: 100px
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    border: 2px solid secondary;
  .white
    background-color: white
  .key-guide
    font-size: 14px
    color: tertiary
    font-family: menlo
    position: absolute
    left: 40%
    bottom: -75%
    @media(max-width: 400px)
      display: none
  .next-palette
    position: relative
    display: inline-block
    list-style-type: none
    width: auto
    vertical-align: 80%
    color: secondary
    height: auto
    padding-bottom: 1rem 
    .next-palette-color
      display: inline-block 
      vertical-align: middle
      
    @media(max-width: 570px)
      vertical-align: 45%

    &:hover
      opacity: 0.8
      cursor: pointer
    .key-guide
      bottom: -60%

default-pixel-size-large = 26px
default-pixel-size-medium = 24px
default-pixel-size-small = 18px
default-pixel-size-micro = 13px
section.drawing
  margin-left: 0.5rem
  margin-bottom: 2rem
  cursor: pointer
  display: inline-block
  width: 100%
  .row
    overflow: auto
    user-select: none
  .pixel:last-child
    border-right: 1px tertiary solid
  :last-child .pixel
      border-bottom: 1px tertiary solid
  .pixel
    background-color: black
    width: calc(100% / 22)
    max-width: 26px
    height: default-pixel-size-large 
    display: inline-block
    border-top: 1px tertiary solid
    border-left: 1px tertiary solid
    @media(max-width: 680px)
      height: default-pixel-size-medium
    @media(max-width: 570px)
      height: default-pixel-size-small
    @media(max-width: 400px)
      height: default-pixel-size-micro

#canvas
  margin-top: 1em
  margin-bottom: 3rem
  width: 100%
  max-width: 400px

.primary-button
  color: primary
  display: inline-block
  border: 2px white solid
  border-radius: 5px
  padding: 10px
  user-select: none
  cursor: pointer
  background-color: transparent
  &:hover
    background-color: rgba(255,255,255,0.2)
  &:active
    background-color: rgba(255,255,255,0.4)

.has-emoji
