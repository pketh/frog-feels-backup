section.drawing
  - var rows = 20
  - var coordinateConstant = rows + 1
  while rows > 0
    .row
      - var row = Math.abs(rows - coordinateConstant)
      - var pixels = 20
      while pixels > 0
        - var pixel = Math.abs(pixels - coordinateConstant)
        .pixel(data-x=pixel data-y=row)
        - pixels--
      - rows--


